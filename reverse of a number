import java.util.*;
public class reverse_of_a_number {
    public static void main(String args[]){
        Scanner scan=new Scanner(System.in);

        System.out.print("input the nmber to be reversed: ");
        int n=scan.nextInt();
        
        while(n>0){
            int lastDigit=n%10;
            System.out.print(lastDigit);
            n=n/10;
            
           /*
           another way to reverse the nnumber which is more efficient:-
           
           int rev=0;
        while(n>0){
            int lastDigit=n%10;
            rev=(rev*10)+lastDigit;
            n=n/10;
        }System.out.println(rev);//here system will print the whole number which is reversed,not one by one.
        */
        }
    }
}
/*
output:-
input the nmber to be reversed: 8520
0258
*/
